<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- Generate the files created by the source generator in the obj folder -->
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>

        <!-- You can keep generated files in a specific folder-->
        <CompilerGeneratedFilesOutputPath>Generated\$(TargetFramework)</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <!-- Exclude some files from Generated folder -->
        <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
        <Foled Include="Generated\**" />

        <!--Generator reference should be added as an Analyzer-->
        <ProjectReference Include="..\SourceGenerators\SourceGenerators.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false"/>
    </ItemGroup>
</Project>
